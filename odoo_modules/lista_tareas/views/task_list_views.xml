<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem 
        id="menu_task_list_root" 
        name="Lista de Tareas" 
        sequence="10"/>

<record id="view_task_list_list" model="ir.ui.view">
        <field name="name">task.list.list</field>
        <field name="model">task.list</field>
        <field name="arch" type="xml">
            <list string="Lista de Tareas"> <field name="name"/>
                <field name="is_completed" decoration-success="is_completed == True"/>
                <field name="creation_date"/>
            </list> </field>
    </record>

    <menuitem 
        id="menu_task_list_sub"
        name="Tareas Pendientes" 
        parent="menu_task_list_root" 
        action="action_task_list"
        sequence="10"/>
        
    <record id="view_task_list_form" model="ir.ui.view">
        <field name="name">task.list.form</field>
        <field name="model">task.list</field>
        <field name="arch" type="xml">
            <form string="Tarea">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_completed"/>
                    </group>
                    <group>
                        <field name="creation_date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_task_list_tree" model="ir.ui.view">
        <field name="name">task.list.tree</field>
        <field name="model">task.list</field>
        <field name="arch" type="xml">
            <tree string="Lista de Tareas">
                <field name="name"/>
                <field name="is_completed" decoration-success="is_completed == True"/>
                <field name="creation_date"/>
            </tree>
        </field>
    </record>
    
</odoo>